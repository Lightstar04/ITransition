@model UserManagement.ViewModels.User.RegisterUserView

@{
    ViewBag.Title = "Login";
    var errorMessage = ViewData["ErrorMessage"];
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="widget p-5 mt-5" style="background-color:#54598D">
            <div class="mb-3 d-flex align-items-center flex-column">
                <h2 class="text-light">Login</h2>
                <span class="text-danger fs-6">@errorMessage</span>
            </div>
            <form method="post" class="row justify-content-center mb-2 p-2">
                <input type="email" name="email" placeholder="Email" required class="form-control mb-2 w-75" />
                <input type="password" name="password" placeholder="Password" required class="form-control mb-2 w-75" />
                <button class="btn btn-success w-50 mt-2">Login</button>
            </form>
            <div class="mt-3 text-center text-light">
                <span>Don't have an account? </span>
                <a asp-action="Register" class="text-info">Register</a>
            </div>
        </div>
    </div>
</div>
@Html.ValidationSummary()